#!/bin/bash

# Syntax: build <Optional Fancy Name Here>
# This simplifies the whole build setup process. It would probably most helpful
# run this in a screen.
. build/envsetup.sh
breakfast cm_d710-userdebug
if [ $# -ne 0 ]
then
	export CM_BUILDTYPE="EXPERIMENTAL"
	export CM_EXTRAVERSION=$1
fi
LOG_FILE=build-log.`date +%FT%T`
( time mka bacon >&$LOG_FILE ) 2>>$LOG_FILE
